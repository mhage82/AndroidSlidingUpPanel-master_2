<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/DarkBlue</item>
        <item name="colorPrimaryDark">@color/StatusBarBlue</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>
    <style name="RowTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/StatusBarBlue</item>


    </style>

    <style name="EditTextTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
        <item name="android:ems">20</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:hint">Password</item>
    </style>
    <style name="EditTextTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
        <item name="android:ems">20</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="EditTextTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70px</item>
        <item name="android:ems">20</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:hint">Password</item>
    </style>
</resources>
